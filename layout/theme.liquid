<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>McLiquid-Carr</title>
    {{ 'modern-normalize.css' | asset_url | stylesheet_tag }}
    <style>
      body,
      html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
      }

      .header {
        background-color: #f8f8f8;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #f0c040;
        gap: 2em;
      }
      .header .logo {
        font-size: 24px;
        font-weight: bold;
        color: #2e7d32;
      }
      .header .search {
        flex-grow: 1;
      }
      .header .search input {
        width: 100%;
        padding: 5px;
        font-size: 16px;
      }
      .header .links {
        display: flex;
        gap: 15px;
      }
      body {
        height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .container {
        display: flex;
        flex-grow: 1;
        overflow-y: hidden;
      }
      .sidebar {
        width: 250px;
        background-color: #f0f0f0;
        border-right: 1px solid #ddd;
        height: 100%;
      }
      .sidebar h3 {
        margin-top: 0;
        color: #2e7d32;
      }

      .main-content {
        flex-grow: 1;
        padding: 20px;
        height: 100%;
        overflow-y: auto;
      }
      .main-content h2 {
        margin-top: 0;
      }
      .main-content .items {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }
      .main-content .item {
        width: 100px;
        text-align: center;
      }
      .main-content .item img {
        width: 100%;
        height: auto;
      }
      .footer {
        background-color: #f8f8f8;
        padding: 10px;
        text-align: center;
        border-top: 1px solid black;
      }
      .sidebar ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .sidebar ul li a {
        text-decoration: none;
        color: #333; /* Dark gray color */
        font-size: 16px;
        transition: color 0.3s ease;
      }
      .sidebar ul li a:hover {
        color: #2e7d32; /* Green color on hover */
      }

      .categories-header {
        border-bottom: 1px solid black;
        padding: 0.5rem 0.5rem;
        margin: 0;
      }

      .categories {
        height: 100%;
        overflow-y: scroll;
        padding: 0.5rem;
      }
    </style>
    {{ content_for_header }}
  </head>
  <body>
    <nav class="header">
      <div class="logo"><a href="/" style="text-decoration: none; color: #2e7d32">McLiquid-Carr</a></div>
      <div class="search">
        <form method="get" action="{{ routes.search_url }}">
          <input
            type="text"
            placeholder="Search"
            name="q"
            value="{{ search.terms | escape }}"
          >
        </form>
      </div>
      <a href="/cart">Order ({{ cart.item_count }})</a>
      <a href="#">Order History</a>
    </nav>
    <div class="container">
      <div class="sidebar">
        <h3>Choose a Category</h3>
        <ul>
          {% for category_object in shop.metaobjects.category_metaobject.values %}
            <li><a href="/pages/category/{{ category_object.url }}">{{ category_object.name }}</a></li>
          {% endfor %}
          <li>
            <a href="/pages/category/hardware-building-consumables">{{ shop.metaobjects.category_metaobject['hardware-building-consumables'].name }}</a>
          </li>
          
          {% comment %} {% for collection in collections %}
            <li>
              <a href="{{collection.url}}">{{ collection.title }}</a>
            </li>
          {% endfor %} {% endcomment %}
        </ul>
      </div>
      <div class="main-content">
        {{ content_for_layout }}
      </div>
    </div>
    <div class="footer">
      <p>Home | Location | Returns | Careers | Mobile App | Solidworks Add-In | Help | Settings</p>
    </div>
  </body>
</html>
