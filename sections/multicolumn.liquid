<style>
  .card {
    display: flex;
    font-size: 0.8rem;
    gap: 0.5rem;
    border: 1px solid lightgrey;
    padding: 0.5rem;
    border-radius: 0.25rem;
    text-decoration: none;
    color: black;
  }
  .card:hover {
    background-color: lightgrey;
  }
  .card:hover .card__title {
    text-decoration: underline;
  }
  .card__image {
  }
  .card__content {
    flex: 2;
  }
  .card__title {
    font-size: 0.8rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(25rem, 1fr));
    gap: 0.5rem;
    margin: 0.5rem;
  }

  .section-title {
    font-size: 0.8rem;
    font-weight: normal;
    margin: 0;
    position: sticky;
    top: 0;
    background-color: white;
    border-bottom: 1px solid black;
    padding: 0.5rem;
    z-index: 1;
  }
</style>

{% if section.blocks.first.settings.title %}
  <h1 class="section-title">
    {%- assign title_parts = section.blocks.first.settings.title | split: ' > ' -%}
    {%- assign title_parts_count = title_parts | size -%}
    {%- for part in title_parts -%}
      {%- if forloop.index < title_parts_count -%}
        {{ part -}}
        {%- unless forloop.last %} > {% endunless %}
      {%- endif -%}
    {%- endfor -%}
  </h1>
{% endif %}

{% if section.blocks.size > 0 %}
  <div class="grid">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link }}" class="card">
        <div class="card__image">
            {{
                block.settings.image
                | image_url: width: 150
                | image_tag: alt: block.settings.title
              }}
        </div>
        <div class="card__content">
          <div class="card__title">{{ block.settings.title | split: ' > ' | last }}</div>
          <div class="card__description">{{ block.settings.description }}</div>
        </div>
      </a>
    {%- endfor -%}
  </div>
{% endif %}

{% schema %}
{
  "name": "Multicolumn",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "metaobject_list",
      "id": "metaobject_collection",
      "label": "Metaobject Collection",
      "metaobject_type": "collection"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "description text"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "link label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link url"
        }
      ]
    }
  ]
}
{% endschema %}
